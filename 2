'use client'

import Link from "next/link"
import { usePathname } from "next/navigation"

interface IAdvantagesLink {
    link: string
}

export const AdvantagesLink = ({link}: IAdvantagesLink) => {
    const pathhname = usePathname().split("/")[3]
    return (
        <Link href={`/${pathhname}/${link}"/services"{link}`} className="absolute inset-0"/>
    )
}
